{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "types": ["react", "react-dom", "jest"],
    "lib": ["ESNext", "DOM", "ES2015.Promise"]
  },
  "exclude": [
    "node_modules"
  ]
}
